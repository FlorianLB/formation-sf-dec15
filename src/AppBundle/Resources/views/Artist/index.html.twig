{% extends '::base.html.twig' %}

{% block title %}Artists - {{ parent() }}{% endblock %}

{% block body_title %}
    Artists
{% endblock %}

{% block body %}
    <ul>
        {% for artist in artists %}
            <li><a href="{{ path('artists_show', {id : artist.id}) }}">{{ artist.name }}</a></li>
        {% endfor %}
    </ul>

    {% if is_granted('ROLE_USER') %}
        <p>
            {{ button.link_button('add', 'Add an artist', 'artists_new') }}
        </p>
    {% endif %}
{% endblock %}