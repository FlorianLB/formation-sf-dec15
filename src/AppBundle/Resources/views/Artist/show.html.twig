{% extends '::base.html.twig' %}

{% block title %}{{ artist.name }} - {{ parent() }}{% endblock %}

{% block body_title %}
    {{ artist.name }}
{% endblock %}


{% block body %}

    <p><img src="{{ artist.picture }}" /></p>
    <p>Genre : {{ artist.genre }}</p>

    {% if is_granted('ROLE_USER') %}
        <p>
            {{ button.link_button('update', 'Update this artist', 'artists_update', {id: artist.id}) }}
        </p>
    {% endif %}

    <h2>Tracks</h2>
    <ul>
        {% for track in artist.tracks %}
            <li><a href="{{ path('tracks_show', {id : track.id}) }}">{{ track.title }}</a></li>
        {% endfor %}
    </ul>

    <h2>Venues</h2>
    <ul>
        {% for venue in artist.venues %}
            <li>{{  venue.location }}</li>
        {% endfor %}
    </ul>
{% endblock %}