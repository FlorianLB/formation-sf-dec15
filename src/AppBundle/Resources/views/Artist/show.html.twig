{% extends '::base.html.twig' %}

{% block title %}{{ artist.name }} - {{ parent() }}{% endblock %}

{% block body_title %}
    {{ artist.name }}
{% endblock %}


{% block body %}

    <p><img src="{{ artist.picture }}" /></p>
    <p>Genre : {{ artist.genre }}</p>

    {% if is_granted('ROLE_USER') %}
        <p>
            <a href="{{ path('artists_update', {id: artist.id}) }}" class="btn btn-primary">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                Update this artist
            </a>
        </p>
    {% endif %}

    <h2>Tracks</h2>
    <ul>
        {% for track in artist.tracks %}
            <li><a href="{{ path('tracks_show', {id : track.id}) }}">{{ track.title }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}